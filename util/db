// Load database connection details from .env so they are not hard-coded
require('dotenv').config();

// Create a reusable Knex instance configured for PostgreSQL
const knex = require('knex')({
  client: 'pg',
  connection: {
    host: process.env.DB_HOST,
    port: process.env.DB_PORT,
    user: process.env.DB_USER,
    password: process.env.DB_PASSWORD,
    database: process.env.DB_NAME,
  },
});

// Export the configured Knex instance so the model can run queries
module.exports = knex;

