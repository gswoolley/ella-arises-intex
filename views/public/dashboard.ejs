        padding: 20px 40px;
        text-align: center;
        border-top: 1px solid #f0f0f0;
        font-size: 12px;
        color: #666;
      }

      @media (max-width: 900px) {
        .dashboard-story {
          grid-template-columns: minmax(0, 1fr);
        }

        .dashboard-metrics {
          grid-template-columns: repeat(2, minmax(0, 1fr));
        }
      }

