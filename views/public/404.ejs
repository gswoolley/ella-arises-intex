<!-- 
  404 Error Page
  Custom branded page shown when users visit non-existent routes
  Returns HTTP 404 status code
-->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Page Not Found | Ella Rises</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --peach: #ffece4;
      --apricot: #f3c8b2;
      --coral: #d35a42;
      --ink: #231815;
      --teal: #0f3e46;
      --sand: #fff8f4;
      --rose: #d4a5a5;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
      color: var(--ink);
      background-color: var(--peach);
      min-height: 100vh;
      position: relative;
      overflow-x: hidden;
    }

    /* Background bubbles */
    .bg-bubble {
      position: absolute;
      border-radius: 999px;
      background-color: rgba(255, 255, 255, 0.26);
      pointer-events: none;
      animation: bubble-drift 20s ease-in-out infinite alternate;
      z-index: 0;
    }

    .bg-bubble--1 {
      width: 200px;
      height: 200px;
      top: 10%;
      left: 5%;
      background-color: rgba(255, 194, 166, 0.32);
      animation-duration: 25s;
    }

    .bg-bubble--2 {
      width: 160px;
      height: 160px;
      top: 60%;
      right: 8%;
      background-color: rgba(216, 205, 246, 0.36);
      animation-duration: 30s;
      animation-delay: -10s;
    }

    .bg-bubble--3 {
      width: 120px;
      height: 120px;
      bottom: 15%;
      left: 15%;
      background-color: rgba(204, 221, 205, 0.36);
      animation-duration: 22s;
      animation-delay: -5s;
    }

    .bg-bubble--4 {
      width: 140px;
      height: 140px;
      top: 40%;
      right: 25%;
      background-color: rgba(212, 165, 165, 0.28);
      animation-duration: 28s;
      animation-delay: -15s;
    }

    @keyframes bubble-drift {
      0% { transform: translate(0, 0); }
      100% { transform: translate(30px, -30px); }
    }

    .page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      padding: 32px 24px 56px;
      position: relative;
      z-index: 1;
    }

    .header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      max-width: 1200px;
      width: 100%;
      margin: 0 auto 48px;
    }

    .brand {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      padding: 10px 16px;
      background: rgba(255, 255, 255, 0.85);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(140, 106, 97, 0.15);
      border-radius: 999px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
      text-decoration: none;
      color: var(--teal);
      font-weight: 800;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .brand:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
    }

    .brand img {
      height: 40px;
      width: auto;
      display: block;
    }

    main {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 0 16px;
    }

    .card {
      position: relative;
      width: 100%;
      max-width: 700px;
      padding: 56px 48px;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(12px);
      border-radius: 24px;
      box-shadow: 0 24px 64px rgba(0, 0, 0, 0.12);
      border: 1px solid rgba(140, 106, 97, 0.12);
      text-align: center;
    }

    .error-code {
      font-size: clamp(80px, 15vw, 140px);
      font-weight: 800;
      line-height: 1;
      background: linear-gradient(135deg, #b89090 0%, #d4a5a5 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 20px;
    }

    h1 {
      margin: 0 0 20px;
      font-size: clamp(28px, 5vw, 40px);
      line-height: 1.2;
      color: #8c6a61;
      font-weight: 800;
    }

    .lede {
      margin: 0 0 32px;
      font-size: 18px;
      line-height: 1.7;
      color: #6b5a56;
    }

    .actions {
      display: flex;
      flex-wrap: wrap;
      gap: 14px;
      justify-content: center;
      margin-bottom: 20px;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 16px 28px;
      border-radius: 12px;
      font-weight: 700;
      font-size: 15px;
      text-decoration: none;
      letter-spacing: 0.02em;
      border: 2px solid transparent;
      transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
      cursor: pointer;
    }

    .btn.primary {
      background: linear-gradient(135deg, #b89090 0%, #d4a5a5 100%);
      color: #fff;
      box-shadow: 0 12px 28px rgba(140, 106, 97, 0.25);
    }

    .btn.primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 16px 36px rgba(140, 106, 97, 0.3);
      background: linear-gradient(135deg, #a67f7f 0%, #c99494 100%);
    }

    .btn.secondary {
      background: rgba(255, 255, 255, 0.9);
      color: #8c6a61;
      border-color: rgba(140, 106, 97, 0.25);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    }

    .btn.secondary:hover {
      background: var(--sand);
      transform: translateY(-2px);
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
      border-color: rgba(140, 106, 97, 0.35);
    }

    .note {
      margin: 0;
      font-size: 14px;
      color: rgba(107, 90, 86, 0.8);
      line-height: 1.6;
    }

    @media (max-width: 768px) {
      .header {
        margin-bottom: 32px;
      }

      .card {
        padding: 40px 28px;
      }

      .actions {
        flex-direction: column;
      }

      .btn {
        width: 100%;
      }

      .brand img {
        height: 32px;
      }

      .error-code {
        font-size: 80px;
      }

      h1 {
        font-size: 24px;
      }

      .lede {
        font-size: 16px;
      }
    }
  </style>
</head>
<body>
  <!-- Background bubbles -->
  <div class="bg-bubble bg-bubble--1"></div>
  <div class="bg-bubble bg-bubble--2"></div>
  <div class="bg-bubble bg-bubble--3"></div>
  <div class="bg-bubble bg-bubble--4"></div>

  <div class="page">
    <header class="header">
      <a class="brand" href="/ella-rises-landingpage/">
        <img src="/ella-rises-landingpage/images/Ella Rises Logo.png" alt="Ella Rises logo">
        <span>Ella Rises</span>
      </a>
    </header>

    <main>
      <section class="card" aria-labelledby="error-title">
        <div class="error-code">404</div>
        <h1 id="error-title">Page Not Found</h1>
        <p class="lede">We couldn't find the page you're looking for. It might have been moved or doesn't exist.</p>

        <div class="actions">
          <a class="btn primary" href="/ella-rises-landingpage/">Go Home</a>
          <a class="btn secondary" href="/dashboard">View Dashboard</a>
        </div>

        <p class="note">If you think this is a mistake, please let us know.</p>
      </section>
    </main>
  </div>
</body>
</html>
