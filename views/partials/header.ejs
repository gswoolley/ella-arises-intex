<header style="padding: 1rem; background: #333; color: white;">
  <nav style="display: flex; gap: 1rem; align-items: center; flex-wrap: wrap;">
    <a href="/" style="color: white; text-decoration: none; font-weight: bold;">üè† Home</a>
    <a href="/ping" style="color: white; text-decoration: none;">Ping</a>
    
    <span style="margin-left: auto; display: flex; gap: 1rem;">
      <% if (currentUser) { %>
        <span style="color: #aaa;">
          Logged in as <strong><%= currentUser.name %></strong> 
          <% if (currentUser.role === 'manager') { %>
            <span style="background: #ff69b4; padding: 0.2rem 0.5rem; border-radius: 0.25rem; font-size: 0.8rem;">MANAGER</span>
          <% } %>
        </span>
        <a href="/auth/logout" style="color: white; text-decoration: none;">Logout</a>
      <% } else { %>
        <a href="/auth/login" style="color: white; text-decoration: none;">Login</a>
        <a href="/auth/register" style="color: white; text-decoration: none;">Register</a>
      <% } %>
    </span>
  </nav>
</header>
