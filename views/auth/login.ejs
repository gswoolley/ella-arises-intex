<div class="auth-container">
  <div class="auth-card">
    <h1>Login</h1>
    <p class="auth-subtitle">Access your Ella Rises account</p>

    <% if (flash.error && flash.error.length > 0) { %>
    <div class="alert alert-error">
      <span class="alert-icon">⚠️</span>
      <%= flash.error[0] %>
    </div>
    <% } %>

    <form method="post" action="/auth/login" class="auth-form">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="your@email.com"
        />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          required
          placeholder="••••••••"
        />
      </div>

      <button type="submit" class="btn btn-primary btn-full">Sign In</button>
    </form>

    <div class="auth-footer">
      <p>Don't have an account? <a href="/auth/register">Create one</a></p>
    </div>

    <details class="demo-credentials">
      <summary>Demo Credentials (for testing)</summary>
      <ul>
        <li><strong>Manager:</strong> manager@ellarises.org / manager123</li>
        <li><strong>User:</strong> user@ellarises.org / user123</li>
      </ul>
    </details>
  </div>
</div>
