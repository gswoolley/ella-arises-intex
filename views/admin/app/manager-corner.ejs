<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Manager Corner – Ella Rises</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 15px;
        background-color: #ffece4;
        color: #231815;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow-x: hidden;
        overflow-y: auto;
      }

      .admin-main-shell {
        flex: 1;
        padding: 40px 72px 56px;
        display: flex;
        justify-content: center;
        position: relative;
        z-index: 1;
      }

      .admin-main {
        width: 100%;
        max-width: 1160px;
      }

      .admin-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
      }

      .admin-header-left {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .admin-logo {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.16);
      }

      .admin-logo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .admin-brand {
        font-size: 16px;
        letter-spacing: 0.16em;
        text-transform: uppercase;
        color: #8c6a61;
      }

      .admin-header-right {
        display: flex;
        align-items: center;
        gap: 18px;
        font-size: 13px;
        color: #6b5a56;
      }

      .admin-nav {
        display: flex;
        align-items: center;
        gap: 16px;
      }

      .admin-nav-link-back {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 14px;
        border-radius: 999px;
        font-size: 13px;
        color: #2f2623;
        text-decoration: none;
        position: relative;
      }

      .admin-nav-link-back::before {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: inherit;
        background: transparent;
        transition: background 0.12s ease, box-shadow 0.12s ease;
        z-index: -1;
      }

      .admin-nav-link-back:hover::before {
        background: #f8cdb9;
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.12);
      }

      .admin-nav-link-back-icon {
        font-size: 14px;
      }

      .admin-header-user {
        font-size: 13px;
        color: #6b5a56;
      }

      .admin-header-signout {
        border: none;
        background: none;
        font-size: 13px;
        color: #6b5a56;
        cursor: pointer;
        text-decoration: underline;
      }

      .bg-bubble {
        position: absolute;
        border-radius: 999px;
        background-color: rgba(255, 255, 255, 0.26);
        pointer-events: none;
        mix-blend-mode: normal;
        animation-name: bubble-drift;
        animation-timing-function: ease-in-out;
        animation-iteration-count: infinite;
        animation-direction: alternate;
        z-index: 0;
      }

      .bg-bubble--peach {
        background-color: rgba(255, 194, 166, 0.32);
      }

      .bg-bubble--lilac {
        background-color: rgba(216, 205, 246, 0.4);
      }

      .bg-bubble--sage {
        background-color: rgba(204, 221, 205, 0.36);
      }

      .bg-bubble--tl-soft {
        width: 80px;
        height: 80px;
        top: 80px;
        left: auto;
        right: 26%;
        animation-duration: 26s;
        animation-delay: -8s;
      }

      .bg-bubble--tr-soft {
        width: 95px;
        height: 95px;
        top: 120px;
        right: -28px;
        animation-duration: 24s;
        animation-delay: -6s;
      }

      .bg-bubble--mid-soft {
        width: 80px;
        height: 80px;
        top: 58%;
        left: 18%;
        animation-duration: 22s;
        animation-delay: -10s;
      }

      .bg-bubble--br-soft {
        width: 140px;
        height: 140px;
        bottom: -64px;
        right: 8%;
        animation-duration: 30s;
        animation-delay: -4s;
      }

      .bg-bubble--ml-soft {
        width: 70px;
        height: 70px;
        top: 45%;
        left: 6%;
        animation-duration: 24s;
        animation-delay: -5s;
      }

      .bg-bubble--bl-soft {
        width: 100px;
        height: 100px;
        bottom: -50px;
        left: -20px;
        animation-duration: 26s;
        animation-delay: -9s;
      }

      @keyframes bubble-drift {
        0% {
          transform: translate3d(0, 0, 0) scale(1);
        }
        50% {
          transform: translate3d(10px, -6px, 0) scale(1.03);
        }
        100% {
          transform: translate3d(-8px, 6px, 0) scale(0.98);
        }
      }

      .manager-hero-eyebrow {
        font-size: 14px;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: #8c6a61;
        margin-bottom: 8px;
      }

      .manager-hero-title {
        font-size: 40px;
        line-height: 1.4;
        font-weight: 600;
        margin-bottom: 8px;
      }

      .manager-hero-subtitle {
        font-size: 17px;
        line-height: 1.8;
        color: #6b5a56;
        max-width: 640px;
        margin-bottom: 24px;
      }

      .manager-subnav {
        display: inline-flex;
        gap: 8px;
        padding: 4px;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.7);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
        margin-bottom: 20px;
      }

      .manager-subnav-link {
        padding: 6px 14px;
        border-radius: 999px;
        border: none;
        font-size: 12px;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        text-decoration: none;
        cursor: pointer;
        background: transparent;
        color: #7c6a65;
        white-space: nowrap;
      }

      .manager-subnav-link:hover {
        background: rgba(255, 236, 228, 0.9);
      }

      .manager-subnav-link--active {
        background: #2f2623;
        color: #ffffff;
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.18);
      }

      .manager-section--hidden {
        display: none;
      }

      .manager-kpis--hidden {
        display: none !important;
      }

      .requests-card {
        background: #fff7f3;
        border-radius: 20px;
        padding: 20px 22px;
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.08);
        border: 1px solid #f0ddd6;
      }

      .requests-header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        margin-bottom: 16px;
        gap: 12px;
      }

      .requests-title {
        font-size: 18px;
        font-weight: 600;
      }

      .requests-count {
        font-size: 13px;
        color: #8b7a75;
      }

      .filter-toggle {
        display: inline-flex;
        border-radius: 999px;
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid #e5d4ce;
        overflow: hidden;
        font-size: 12px;
      }

      .filter-toggle-link {
        padding: 4px 10px;
        border: none;
        background: transparent;
        color: #6b5a56;
        text-decoration: none;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 0.09em;
      }

      .filter-toggle-link:hover {
        background: rgba(255, 236, 228, 0.9);
      }

      .filter-toggle-link--active {
        background: #2f2623;
        color: #ffffff;
      }

      .requests-table-wrapper {
        overflow-x: auto;
      }

      table.requests-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
      }

      table.requests-table thead {
        background: #ffe8de;
      }

      table.requests-table th,
      table.requests-table td {
        padding: 8px 10px;
        text-align: left;
        white-space: nowrap;
      }

      table.requests-table th {
        font-size: 12px;
        letter-spacing: 0.14em;
        text-transform: uppercase;
        color: #8c6a61;
        border-bottom: 1px solid #f0ddd6;
      }

      table.requests-table tbody tr:nth-child(even) {
        background: #fffaf7;
      }

      .requests-pagination {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
        font-size: 12px;
        color: #6b5a56;
      }

      .requests-pagination a {
        text-decoration: none;
        color: #2f2623;
        padding: 4px 10px;
        border-radius: 999px;
        border: 1px solid #e5d4ce;
        background: rgba(255, 255, 255, 0.9);
      }

      .requests-pagination a:hover {
        background: #ffe8de;
      }

      .status-pill {
        display: inline-flex;
        align-items: center;
        padding: 3px 10px;
        border-radius: 999px;
        font-size: 11px;
      }

      .status-pill--pending {
        background: rgba(252, 211, 77, 0.18);
        color: #92400e;
      }

      .status-pill--approved {
        background: rgba(187, 247, 208, 0.26);
        color: #166534;
      }

      .status-pill--rejected {
        background: rgba(254, 202, 202, 0.28);
        color: #b91c1c;
      }

      .empty-state {
        font-size: 14px;
        color: #7c6a65;
        padding: 8px 0;
      }

      .action-icon-btn {
        border: none;
        cursor: pointer;
        width: 26px;
        height: 26px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
        margin-right: 4px;
      }

      .action-icon-btn--approve {
        color: #166534;
      }

      .action-icon-btn--reject {
        color: #b91c1c;
      }

      .action-icon-btn--approve:hover {
        background: rgba(187, 247, 208, 0.9);
      }

      .action-icon-btn--reject:hover {
        background: rgba(254, 202, 202, 0.9);
      }

      .user-search-btn {
        padding: 6px 16px;
        border-radius: 999px;
        border: none;
        background: #2f2623;
        color: #ffffff;
        font-size: 12px;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        cursor: pointer;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.14);
      }

      .user-search-btn:hover {
        background: #1f1714;
      }

      .delete-pill {
        border: none;
        cursor: pointer;
        font-size: 12px;
        padding: 4px 10px;
        border-radius: 999px;
        background: rgba(254, 202, 202, 0.7);
        color: #7f1d1d;
      }

      .delete-pill:hover {
        background: rgba(248, 113, 113, 0.9);
        color: #7f1d1d;
      }

      .role-toggle-btn {
        border: none;
        cursor: pointer;
        font-size: 12px;
        padding: 4px 10px;
      }

      .role-toggle-btn--user {
        background: #2f2623;
        color: #ffffff;
      }

      .role-toggle-btn--user-inactive {
        background: transparent;
        color: #6b5a56;
      }

      .role-toggle-btn--manager {
        background: #2f2623;
        color: #ffffff;
        border-left: 1px solid #e5d4ce;
      }

      .role-toggle-btn--manager-inactive {
        background: transparent;
        color: #6b5a56;
        border-left: 1px solid #e5d4ce;
      }

      .role-toggle-btn--user:hover,
      .role-toggle-btn--user-inactive:hover,
      .role-toggle-btn--manager:hover,
      .role-toggle-btn--manager-inactive:hover {
        background: #1f1714;
        color: #ffffff;
      }

      /* Modal styles (matching events view) */
      .requests-modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.35);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 50;
      }

      .requests-modal {
        background: #ffffff;
        border-radius: 16px;
        padding: 18px 20px;
        max-width: 440px;
        width: 100%;
        box-shadow: 0 18px 45px rgba(0, 0, 0, 0.22);
        max-height: 80vh;
        overflow-y: auto;
      }

      .requests-modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
      }

      .requests-modal-title {
        font-size: 18px;
        font-weight: 600;
      }

      .requests-modal-close {
        border: none;
        background: none;
        font-size: 18px;
        cursor: pointer;
      }

      .requests-modal-body {
        font-size: 14px;
        color: #4b4542;
        line-height: 1.6;
        margin-bottom: 16px;
      }

      .requests-modal-warning {
        background: rgba(254, 202, 202, 0.3);
        border: 1px solid rgba(185, 28, 28, 0.2);
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 13px;
        color: #7f1d1d;
        margin-bottom: 12px;
      }

      .requests-modal-email {
        font-weight: 600;
        color: #2f2623;
      }

      .requests-modal-actions {
        margin-top: 12px;
        display: flex;
        justify-content: flex-end;
        gap: 8px;
      }

      .requests-modal-btn {
        padding: 6px 14px;
        border-radius: 999px;
        border: none;
        font-size: 13px;
        cursor: pointer;
      }

      .requests-modal-btn--cancel {
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid #e5d4ce;
        color: #2f2623;
      }

      .requests-modal-btn--cancel:hover {
        background: #ffe8de;
      }

      .requests-modal-btn--delete {
        background: #b91c1c;
        color: #ffffff;
      }

      .requests-modal-btn--delete:hover {
        background: #991b1b;
      }

      .requests-modal-btn--save {
        background: #2f2623;
        color: #ffffff;
      }

      .requests-modal-btn--save:hover {
        background: #1f1714;
      }

      .requests-modal-field {
        margin-bottom: 10px;
      }

      .requests-modal-label {
        font-size: 13px;
        color: #6b5a56;
        display: block;
        margin-bottom: 4px;
      }

      .requests-modal-input {
        width: 100%;
        padding: 6px 8px;
        border-radius: 6px;
        border: 1px solid #d1d5db;
        font-size: 13px;
      }

      .requests-modal-input:disabled {
        background: #f3f4f6;
        color: #6b7280;
        cursor: not-allowed;
      }

      .requests-modal-textarea {
        width: 100%;
        padding: 6px 8px;
        border-radius: 6px;
        border: 1px solid #d1d5db;
        font-size: 13px;
        resize: vertical;
        min-height: 60px;
      }

      .requests-modal-info {
        background: rgba(219, 234, 254, 0.5);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 13px;
        color: #1e40af;
        margin-bottom: 12px;
      }

      .edit-pill {
        border: 1px solid #e5d4ce;
        background: #fff7f3;
        color: #2f2623;
        cursor: pointer;
        font-size: 12px;
        padding: 4px 10px;
        border-radius: 999px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        transition: background 0.12s ease, border-color 0.12s ease;
      }

      .edit-pill:hover {
        background: #ffe8de;
        border-color: #e0bfb0;
      }

      @media (max-width: 768px) {
        .admin-main-shell {
          padding: 32px 20px 40px;
        }

        .requests-card {
          padding: 16px 16px;
        }
      }

      @media (max-width: 640px) {
        .admin-main-shell {
          padding: 24px 16px 32px;
        }
      }
    </style>
  </head>
  <body>
    <div class="bg-bubble bg-bubble--peach bg-bubble--tl-soft"></div>
    <div class="bg-bubble bg-bubble--lilac bg-bubble--tr-soft"></div>
    <div class="bg-bubble bg-bubble--sage bg-bubble--mid-soft"></div>
    <div class="bg-bubble bg-bubble--peach bg-bubble--br-soft"></div>
    <div class="bg-bubble bg-bubble--lilac bg-bubble--ml-soft"></div>
    <div class="bg-bubble bg-bubble--sage bg-bubble--bl-soft"></div>

    <main class="admin-main-shell">
      <div class="admin-main">
        <header class="admin-header">
          <div class="admin-header-left">
            <div class="admin-logo">
              <img src="/images/Untitled design (48).png" alt="Ella Rises" />
            </div>
            <div class="admin-brand">Ella Rises</div>
          </div>
          <div class="admin-header-right">
            <nav class="admin-nav">
              <a href="/admin/home" class="admin-nav-link-back">
                <span class="admin-nav-link-back-icon">&#8592;</span>
                <span>Back to home</span>
              </a>
            </nav>
            <span class="admin-header-user">Signed in as <strong><%= user.firstName %></strong></span>
            <form method="POST" action="/admin/logout" style="margin: 0">
              <button type="submit" class="admin-header-signout">Sign out</button>
            </form>
          </div>
        </header>

        <section class="manager-hero">
          <div class="manager-hero-eyebrow">Manager tools</div>
          <h1 class="manager-hero-title">Access &amp; roles control center</h1>
          <p class="manager-hero-subtitle">
            Review new access requests, keep track of who has been approved, and manage existing
            user roles so the right people stay connected to Ella Rises data.
          </p>
          <nav class="manager-subnav">
            <a href="#manager-section-requests" class="manager-subnav-link manager-subnav-link--active">Requests</a>
            <a href="#manager-section-users" class="manager-subnav-link">Users &amp; roles</a>
          </nav>
        </section>

        <!-- KPI row for Requests tab -->
        <section
          class="admin-stats-row"
          id="manager-kpis-requests"
          style="margin-bottom: 28px; display: grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap: 14px;"
        >
          <article class="admin-stat-card" style="background:#fff7f3;border-radius:14px;padding:14px 16px;border:1px solid #ffe0d4;box-shadow:0 4px 10px rgba(0,0,0,0.06);display:flex;flex-direction:column;justify-content:space-between;">
            <div class="admin-stat-label" style="font-size:13px;letter-spacing:0.16em;text-transform:uppercase;color:#a67666;margin-bottom:4px;">Pending requests</div>
            <div class="admin-stat-value" style="font-size:34px;font-weight:700;color:#2f2623;">
              <%= Number(metrics.pending || 0).toLocaleString('en-US') %>
            </div>
          </article>
          <article class="admin-stat-card" style="background:#fff7f3;border-radius:14px;padding:14px 16px;border:1px solid #ffe0d4;box-shadow:0 4px 10px rgba(0,0,0,0.06);display:flex;flex-direction:column;justify-content:space-between;">
            <div class="admin-stat-label" style="font-size:13px;letter-spacing:0.16em;text-transform:uppercase;color:#a67666;margin-bottom:4px;">Approved this month</div>
            <div class="admin-stat-value" style="font-size:34px;font-weight:700;color:#2f2623;">
              <%= Number(metrics.approvedThisMonth || 0).toLocaleString('en-US') %>
            </div>
          </article>    
          <article class="admin-stat-card" style="background:#fff7f3;border-radius:14px;padding:14px 16px;border:1px solid #ffe0d4;box-shadow:0 4px 10px rgba(0,0,0,0.06);display:flex;flex-direction:column;justify-content:space-between;">
            <div class="admin-stat-label" style="font-size:13px;letter-spacing:0.16em;text-transform:uppercase;color:#a67666;margin-bottom:4px;">Total active accounts</div>
            <div class="admin-stat-value" style="font-size:34px;font-weight:700;color:#2f2623;">
              <%= Number(metrics.totalAccounts || 0).toLocaleString('en-US') %>
            </div>
          </article>
        </section>

        <!-- KPI row for Users & roles tab -->
        <section
          class="admin-stats-row manager-kpis--hidden"
          id="manager-kpis-users"
          style="margin-bottom: 28px; display: grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap: 14px;"
        >
          <article class="admin-stat-card" style="background:#fff7f3;border-radius:14px;padding:14px 16px;border:1px solid #ffe0d4;box-shadow:0 4px 10px rgba(0,0,0,0.06);display:flex;flex-direction:column;justify-content:space-between;">
            <div class="admin-stat-label" style="font-size:13px;letter-spacing:0.16em;text-transform:uppercase;color:#a67666;margin-bottom:4px;">Total users</div>
            <div class="admin-stat-value" style="font-size:34px;font-weight:700;color:#2f2623;">
              <%= Number(metrics.totalUsers || 0).toLocaleString('en-US') %>
            </div>
          </article>
          <article class="admin-stat-card" style="background:#fff7f3;border-radius:14px;padding:14px 16px;border:1px solid #ffe0d4;box-shadow:0 4px 10px rgba(0,0,0,0.06);display:flex;flex-direction:column;justify-content:space-between;">
            <div class="admin-stat-label" style="font-size:13px;letter-spacing:0.16em;text-transform:uppercase;color:#a67666;margin-bottom:4px;">Total managers</div>
            <div class="admin-stat-value" style="font-size:34px;font-weight:700;color:#2f2623;">
              <%= Number(metrics.totalManagers || 0).toLocaleString('en-US') %>
            </div>
          </article>
          <article class="admin-stat-card" style="background:#fff7f3;border-radius:14px;padding:14px 16px;border:1px solid #ffe0d4;box-shadow:0 4px 10px rgba(0,0,0,0.06);display:flex;flex-direction:column;justify-content:space-between;">
            <div class="admin-stat-label" style="font-size:13px;letter-spacing:0.16em;text-transform:uppercase;color:#a67666;margin-bottom:4px;">Total active accounts</div>
            <div class="admin-stat-value" style="font-size:34px;font-weight:700;color:#2f2623;">
              <%= Number(metrics.totalAccounts || 0).toLocaleString('en-US') %>
            </div>
          </article>
        </section>

        <section class="requests-card" id="manager-section-requests">
          <div class="requests-header">
            <div>
              <div class="requests-title">Pending and past requests</div>
              <form
                method="GET"
                action="/admin/manager"
                style="margin-top:8px; display:flex; align-items:center; gap:6px; font-size:13px; color:#6b5a56;"
              >
                <input type="hidden" name="status" value="<%= statusFilter %>" />
                <label>
                  Search
                  <input
                    type="text"
                    name="q"
                    value="<%= search || '' %>"
                    placeholder="Name or email"
                    style="margin-left:6px; padding:4px 8px; border-radius:999px; border:1px solid #d1d5db; font-size:12px; min-width:180px;"
                  />
                </label>
              </form>
            </div>
            <div style="display:flex; flex-direction:column; align-items:flex-end; gap:6px;">
              <div class="filter-toggle">
                <a
                  href="/admin/manager?status=all#manager-section-requests"
                  class="filter-toggle-link <%= statusFilter === 'all' ? 'filter-toggle-link--active' : '' %>"
                >
                  All
                </a>
                <a
                  href="/admin/manager?status=pending#manager-section-requests"
                  class="filter-toggle-link <%= statusFilter === 'pending' ? 'filter-toggle-link--active' : '' %>"
                >
                  Pending
                </a>
                <a
                  href="/admin/manager?status=approved#manager-section-requests"
                  class="filter-toggle-link <%= statusFilter === 'approved' ? 'filter-toggle-link--active' : '' %>"
                >
                  Approved
                </a>
                <a
                  href="/admin/manager?status=rejected#manager-section-requests"
                  class="filter-toggle-link <%= statusFilter === 'rejected' ? 'filter-toggle-link--active' : '' %>"
                >
                  Rejected
                </a>
              </div>
            </div>
          </div>

          <% if (typeof error !== 'undefined' && error) { %>
          <div class="empty-state"><%= error %></div>
          <% } %>

          <% if (!requests || requests.length === 0) { %>
          <div class="empty-state">You’ll see new account requests here as they come in.</div>
          <% } else { %>
          <div class="requests-table-wrapper">
            <table class="requests-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Organization</th>
                  <th>Message</th>
                  <th>Status</th>
                  <th>Requested</th>
                  <th>Reviewed by</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% requests.forEach(function (r) { %>
                <tr>
                  <td><%= r.first_name %> <%= r.last_name %></td>
                  <td><%= r.email %></td>
                  <td><%= r.organization || '' %></td>
                  <td>
                    <% if (r.message) { %>
                    <details>
                      <summary style="cursor:pointer; color:#8c6a61;">View</summary>
                      <div style="margin-top:4px; max-width:260px; white-space:normal;">
                        <%= r.message %>
                      </div>
                    </details>
                    <% } else { %>
                    —
                    <% } %>
                  </td>
                  <td>
                    <% const s = (r.status || 'pending').toLowerCase(); %>
                    <span
                      class="status-pill
                      <%= s === 'approved' ? 'status-pill--approved' : s === 'rejected' ? 'status-pill--rejected' : 'status-pill--pending' %>"
                    >
                      <%= s.charAt(0).toUpperCase() + s.slice(1) %>
                    </span>
                  </td>
                  <td><%= r.created_at ? r.created_at.toISOString().slice(0, 10) : '' %></td>
                  <td>
                    <% if (r.reviewed_at && r.reviewed_by) { %>
                    <%= r.reviewed_by %>
                    <% } else { %>
                    —
                    <% } %>
                  </td>
                  <td>
                    <% const isPending = (r.status || 'pending').toLowerCase() === 'pending'; %>
                    <% if (isPending) { %>
                    <form
                      method="POST"
                      action="/admin/manager/<%= r.id %>/approve"
                      style="display:inline-block; margin-right:4px;"
                    >
                      <button
                        type="submit"
                        class="action-icon-btn action-icon-btn--approve"
                        title="Approve request"
                      >
                        ✓
                      </button>
                    </form>
                    <form
                      method="POST"
                      action="/admin/manager/<%= r.id %>/reject"
                      style="display:inline-block; margin-right:4px;"
                    >
                      <button
                        type="submit"
                        class="action-icon-btn action-icon-btn--reject"
                        title="Reject request"
                      >
                        ✕
                      </button>
                    </form>
                    <% } %>
                    <button
                      type="button"
                      class="edit-pill"
                      data-edit-request-id="<%= r.id %>"
                      data-edit-request-email="<%= r.email %>"
                      data-edit-request-firstname="<%= r.first_name %>"
                      data-edit-request-lastname="<%= r.last_name %>"
                      data-edit-request-organization="<%= r.organization || '' %>"
                      data-edit-request-message="<%= r.message || '' %>"
                      data-edit-request-hasuser="<%= userEmailSet.has(r.email) ? 'yes' : 'no' %>"
                      title="Edit request"
                      style="margin-right:4px;"
                    >
                      Edit
                    </button>
                    <button
                      type="button"
                      class="delete-pill"
                      data-delete-request-id="<%= r.id %>"
                      data-delete-request-email="<%= r.email %>"
                      data-delete-request-name="<%= r.first_name %> <%= r.last_name %>"
                      title="Delete request"
                    >
                      Delete
                    </button>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% if (typeof usersTotalPages !== 'undefined' && usersTotalPages > 1) { %>
          <div class="requests-pagination">
            <div>
              Page <%= usersPage %> of <%= usersTotalPages %>
            </div>
            <div style="display:flex; gap:8px;">
              <% if (usersPage > 1) { %>
              <a
                href="/admin/manager?page=<%= usersPage - 1 %><%= search ? '&amp;q=' + encodeURIComponent(search) : '' %>#manager-section-users"
              >
                ← Previous
              </a>
              <% } %>
              <% if (usersPage < usersTotalPages) { %>
              <a
                href="/admin/manager?page=<%= usersPage + 1 %><%= search ? '&amp;q=' + encodeURIComponent(search) : '' %>#manager-section-users"
              >
                Next →
              </a>
              <% } %>
            </div>
          </div>
          <% } %>
          <% } %>
        </section>

        <!-- User management: search and elevate -->
        <section class="requests-card manager-section--hidden" id="manager-section-users" style="margin-top: 24px;">
          <div class="requests-header" style="margin-bottom: 8px;">
            <div>
              <div class="requests-title">User &amp; role management</div>
            </div>
            <div style="display:flex; flex-direction:column; align-items:flex-end; gap:6px;">
              <div class="filter-toggle">
                <a
                  href="/admin/manager?role=all#manager-section-users"
                  class="filter-toggle-link <%= roleFilter === 'all' ? 'filter-toggle-link--active' : '' %>"
                >
                  All
                </a>
                <a
                  href="/admin/manager?role=user#manager-section-users"
                  class="filter-toggle-link <%= roleFilter === 'user' ? 'filter-toggle-link--active' : '' %>"
                >
                  Users
                </a>
                <a
                  href="/admin/manager?role=manager#manager-section-users"
                  class="filter-toggle-link <%= roleFilter === 'manager' ? 'filter-toggle-link--active' : '' %>"
                >
                  Managers
                </a>
              </div>
            </div>
          </div>

          <form
            method="GET"
            action="/admin/manager"
            style="display:flex; gap:10px; align-items:center; margin-bottom:14px; flex-wrap:wrap;"
          >
            <label style="font-size:13px; color:#6b5a56;">
              Search users
              <input
                type="text"
                name="q"
                value="<%= search || '' %>"
                placeholder="Name or email"
                style="margin-left:6px; padding:6px 10px; border-radius:999px; border:1px solid #d1d5db; font-size:13px; min-width:220px;"
              />
            </label>
            <button type="submit" class="user-search-btn">
              Search
            </button>
          </form>

          <% if (search && (!users || users.length === 0)) { %>
          <div class="empty-state">No users found matching "<%= search %>".</div>
          <% } %>

          <% if (users && users.length > 0) { %>
          <div class="requests-table-wrapper">
            <table class="requests-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Role</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function (u) { %>
                <tr>
                  <td><%= u.first_name %> <%= u.last_name %></td>
                  <td><%= u.email %></td>
                  <td>
                    <% const role = (u.permission || 'user').toLowerCase(); %>
                    <% if (u.id === user.id) { %>
                    <span><%= role === 'manager' ? 'Manager' : 'User' %></span>
                    <% } else { %>
                    <div
                      style="display:inline-flex; border-radius:999px; background:rgba(255,255,255,0.8); border:1px solid #e5d4ce; overflow:hidden; font-size:12px;"
                    >
                      <form
                        method="POST"
                        action="/admin/manager/users/<%= u.id %>/<%= role === 'manager' ? 'demote' : 'elevate' %>"
                        style="display:flex;"
                      >
                        <input type="hidden" name="q" value="<%= search || '' %>" />
                        <input type="hidden" name="role" value="<%= roleFilter || 'all' %>" />
                        <button
                          type="submit"
                          class="role-toggle-btn <%= role === 'user' ? 'role-toggle-btn--user' : 'role-toggle-btn--user-inactive' %>"
                        >
                          User
                        </button>
                        <button
                          type="submit"
                          formaction="/admin/manager/users/<%= u.id %>/<%= role === 'manager' ? 'demote' : 'elevate' %>"
                          class="role-toggle-btn <%= role === 'manager' ? 'role-toggle-btn--manager' : 'role-toggle-btn--manager-inactive' %>"
                        >
                          Manager
                        </button>
                      </form>
                    </div>
                    <% } %>
                  </td>
                  <td>
                    <% if (u.id === user.id) { %>
                    —
                    <% } else { %>
                    <button
                      type="button"
                      class="edit-pill"
                      data-edit-user-id="<%= u.id %>"
                      data-edit-user-email="<%= u.email %>"
                      data-edit-user-firstname="<%= u.first_name %>"
                      data-edit-user-lastname="<%= u.last_name %>"
                      data-edit-user-search="<%= search || '' %>"
                      data-edit-user-role="<%= roleFilter || 'all' %>"
                      data-edit-user-hasrequest="<%= requestEmailSet.has(u.email) ? 'yes' : 'no' %>"
                      title="Edit user"
                      style="margin-right:4px;"
                    >
                      Edit
                    </button>
                    <form
                      method="POST"
                      action="/admin/manager/users/<%= u.id %>/delete"
                      style="display:inline-block;"
                      onsubmit="return confirm('Are you sure you want to delete this user account? This action cannot be undone.');"
                    >
                      <input type="hidden" name="q" value="<%= search || '' %>" />
                      <input type="hidden" name="role" value="<%= roleFilter || 'all' %>" />
                      <button
                        type="submit"
                        class="delete-pill"
                        title="Delete user"
                      >
                        Delete
                      </button>
                    </form>
                    <% } %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% } %>
        </section>
      </div>
    </main>

    <!-- Delete Request Confirmation Modal -->
    <div class="requests-modal-backdrop" id="delete-request-modal">
      <div class="requests-modal">
        <div class="requests-modal-header">
          <div class="requests-modal-title">Confirm deletion</div>
          <button type="button" class="requests-modal-close" data-close-delete-modal>&times;</button>
        </div>
        <div class="requests-modal-body">
          <p>You are about to permanently delete the account request for:</p>
          <p class="requests-modal-email" id="delete-modal-email"></p>
          <p style="margin-top:8px;">(<span id="delete-modal-name"></span>)</p>
        </div>
        <div class="requests-modal-warning">
          <strong>Warning:</strong> This will permanently delete the access request and any account login associated with this email address. This action cannot be undone.
        </div>
        <form method="POST" id="delete-request-form" action="">
          <div class="requests-modal-actions">
            <button type="button" class="requests-modal-btn requests-modal-btn--cancel" data-close-delete-modal>Cancel</button>
            <button type="submit" class="requests-modal-btn requests-modal-btn--delete">Delete</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Edit Request Modal -->
    <div class="requests-modal-backdrop" id="edit-request-modal">
      <div class="requests-modal">
        <div class="requests-modal-header">
          <div class="requests-modal-title">Edit request</div>
          <button type="button" class="requests-modal-close" data-close-edit-request-modal>&times;</button>
        </div>
        <div class="requests-modal-info" id="edit-request-warning" style="display:none;">
          <strong>Note:</strong> This email has an associated account login. Changes to the name will also update the account login information.
        </div>
        <form method="POST" id="edit-request-form" action="">
          <div class="requests-modal-field">
            <label class="requests-modal-label" for="edit-request-email">Email</label>
            <input type="text" id="edit-request-email" class="requests-modal-input" disabled />
          </div>
          <div class="requests-modal-field">
            <label class="requests-modal-label" for="edit-request-firstname">First name</label>
            <input type="text" id="edit-request-firstname" name="firstName" class="requests-modal-input" required />
          </div>
          <div class="requests-modal-field">
            <label class="requests-modal-label" for="edit-request-lastname">Last name</label>
            <input type="text" id="edit-request-lastname" name="lastName" class="requests-modal-input" required />
          </div>
          <div class="requests-modal-field">
            <label class="requests-modal-label" for="edit-request-organization">Organization</label>
            <input type="text" id="edit-request-organization" name="organization" class="requests-modal-input" />
          </div>
          <div class="requests-modal-field">
            <label class="requests-modal-label" for="edit-request-message">Message</label>
            <textarea id="edit-request-message" name="message" class="requests-modal-textarea"></textarea>
          </div>
          <div class="requests-modal-actions">
            <button type="button" class="requests-modal-btn requests-modal-btn--cancel" data-close-edit-request-modal>Cancel</button>
            <button type="submit" class="requests-modal-btn requests-modal-btn--save">Save changes</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Edit User Modal -->
    <div class="requests-modal-backdrop" id="edit-user-modal">
      <div class="requests-modal">
        <div class="requests-modal-header">
          <div class="requests-modal-title">Edit user</div>
          <button type="button" class="requests-modal-close" data-close-edit-user-modal>&times;</button>
        </div>
        <div class="requests-modal-info" id="edit-user-warning" style="display:none;">
          <strong>Note:</strong> This email has an associated access request. Changes to the name will also update the request record.
        </div>
        <form method="POST" id="edit-user-form" action="">
          <input type="hidden" id="edit-user-search" name="q" value="" />
          <input type="hidden" id="edit-user-role" name="role" value="" />
          <div class="requests-modal-field">
            <label class="requests-modal-label" for="edit-user-email">Email</label>
            <input type="text" id="edit-user-email" class="requests-modal-input" disabled />
          </div>
          <div class="requests-modal-field">
            <label class="requests-modal-label" for="edit-user-firstname">First name</label>
            <input type="text" id="edit-user-firstname" name="firstName" class="requests-modal-input" required />
          </div>
          <div class="requests-modal-field">
            <label class="requests-modal-label" for="edit-user-lastname">Last name</label>
            <input type="text" id="edit-user-lastname" name="lastName" class="requests-modal-input" required />
          </div>
          <div class="requests-modal-actions">
            <button type="button" class="requests-modal-btn requests-modal-btn--cancel" data-close-edit-user-modal>Cancel</button>
            <button type="submit" class="requests-modal-btn requests-modal-btn--save">Save changes</button>
          </div>
        </form>
      </div>
    </div>

    <script>
      (function () {
        var requestsLink = document.querySelector('.manager-subnav-link[href="#manager-section-requests"]');
        var usersLink = document.querySelector('.manager-subnav-link[href="#manager-section-users"]');
        var requestsSection = document.getElementById('manager-section-requests');
        var usersSection = document.getElementById('manager-section-users');
        var kpisRequests = document.getElementById('manager-kpis-requests');
        var kpisUsers = document.getElementById('manager-kpis-users');

        if (!requestsLink || !usersLink || !requestsSection || !usersSection || !kpisRequests || !kpisUsers)
          return;

        function activate(tab) {
          if (tab === 'requests') {
            requestsSection.classList.remove('manager-section--hidden');
            usersSection.classList.add('manager-section--hidden');
            kpisRequests.classList.remove('manager-kpis--hidden');
            kpisUsers.classList.add('manager-kpis--hidden');
            requestsLink.classList.add('manager-subnav-link--active');
            usersLink.classList.remove('manager-subnav-link--active');
          } else if (tab === 'users') {
            usersSection.classList.remove('manager-section--hidden');
            requestsSection.classList.add('manager-section--hidden');
            kpisUsers.classList.remove('manager-kpis--hidden');
            kpisRequests.classList.add('manager-kpis--hidden');
            usersLink.classList.add('manager-subnav-link--active');
            requestsLink.classList.remove('manager-subnav-link--active');
          }
        }

        // On initial load, decide which tab to show:
        // 1) If URL hash explicitly points to the users section, honor that.
        // 2) Else, if there is a search query, default to Users & roles.
        // 3) Otherwise, show Requests.
        var hash = window.location.hash;
        var hasSearch = "<%= (search && search.length > 0) ? 'yes' : 'no' %>";

        if (hash === '#manager-section-users') {
          activate('users');
        } else if (hasSearch === 'yes') {
          activate('users');
        } else {
          activate('requests');
        }

        requestsLink.addEventListener('click', function (e) {
          e.preventDefault();
          activate('requests');
        });

        usersLink.addEventListener('click', function (e) {
          e.preventDefault();
          activate('users');
        });
      })();

      // Delete request modal functionality
      (function () {
        var modal = document.getElementById('delete-request-modal');
        var form = document.getElementById('delete-request-form');
        var emailEl = document.getElementById('delete-modal-email');
        var nameEl = document.getElementById('delete-modal-name');
        var closeButtons = document.querySelectorAll('[data-close-delete-modal]');
        var deleteButtons = document.querySelectorAll('[data-delete-request-id]');

        if (!modal || !form || !emailEl || !nameEl) return;

        function openModal(id, email, name) {
          form.action = '/admin/manager/requests/' + id + '/delete';
          emailEl.textContent = email;
          nameEl.textContent = name;
          modal.style.display = 'flex';
        }

        function closeModal() {
          modal.style.display = 'none';
          form.action = '';
          emailEl.textContent = '';
          nameEl.textContent = '';
        }

        deleteButtons.forEach(function (btn) {
          btn.addEventListener('click', function () {
            var id = btn.getAttribute('data-delete-request-id');
            var email = btn.getAttribute('data-delete-request-email');
            var name = btn.getAttribute('data-delete-request-name');
            openModal(id, email, name);
          });
        });

        closeButtons.forEach(function (btn) {
          btn.addEventListener('click', closeModal);
        });

        // Close modal when clicking on backdrop
        modal.addEventListener('click', function (e) {
          if (e.target === modal) {
            closeModal();
          }
        });
      })();

      // Edit request modal functionality
      (function () {
        var modal = document.getElementById('edit-request-modal');
        var form = document.getElementById('edit-request-form');
        var warning = document.getElementById('edit-request-warning');
        var emailInput = document.getElementById('edit-request-email');
        var firstNameInput = document.getElementById('edit-request-firstname');
        var lastNameInput = document.getElementById('edit-request-lastname');
        var organizationInput = document.getElementById('edit-request-organization');
        var messageInput = document.getElementById('edit-request-message');
        var closeButtons = document.querySelectorAll('[data-close-edit-request-modal]');
        var editButtons = document.querySelectorAll('[data-edit-request-id]');

        if (!modal || !form) return;

        function openModal(id, email, firstName, lastName, organization, message, hasUser) {
          form.action = '/admin/manager/requests/' + id + '/edit';
          emailInput.value = email;
          firstNameInput.value = firstName;
          lastNameInput.value = lastName;
          organizationInput.value = organization;
          messageInput.value = message;
          warning.style.display = hasUser === 'yes' ? 'block' : 'none';
          modal.style.display = 'flex';
        }

        function closeModal() {
          modal.style.display = 'none';
          form.action = '';
          emailInput.value = '';
          firstNameInput.value = '';
          lastNameInput.value = '';
          organizationInput.value = '';
          messageInput.value = '';
          warning.style.display = 'none';
        }

        editButtons.forEach(function (btn) {
          btn.addEventListener('click', function () {
            var id = btn.getAttribute('data-edit-request-id');
            var email = btn.getAttribute('data-edit-request-email');
            var firstName = btn.getAttribute('data-edit-request-firstname');
            var lastName = btn.getAttribute('data-edit-request-lastname');
            var organization = btn.getAttribute('data-edit-request-organization');
            var message = btn.getAttribute('data-edit-request-message');
            var hasUser = btn.getAttribute('data-edit-request-hasuser');
            openModal(id, email, firstName, lastName, organization, message, hasUser);
          });
        });

        closeButtons.forEach(function (btn) {
          btn.addEventListener('click', closeModal);
        });

        modal.addEventListener('click', function (e) {
          if (e.target === modal) {
            closeModal();
          }
        });
      })();

      // Edit user modal functionality
      (function () {
        var modal = document.getElementById('edit-user-modal');
        var form = document.getElementById('edit-user-form');
        var warning = document.getElementById('edit-user-warning');
        var emailInput = document.getElementById('edit-user-email');
        var firstNameInput = document.getElementById('edit-user-firstname');
        var lastNameInput = document.getElementById('edit-user-lastname');
        var searchInput = document.getElementById('edit-user-search');
        var roleInput = document.getElementById('edit-user-role');
        var closeButtons = document.querySelectorAll('[data-close-edit-user-modal]');
        var editButtons = document.querySelectorAll('[data-edit-user-id]');

        if (!modal || !form) return;

        function openModal(id, email, firstName, lastName, search, role, hasRequest) {
          form.action = '/admin/manager/users/' + id + '/edit';
          emailInput.value = email;
          firstNameInput.value = firstName;
          lastNameInput.value = lastName;
          searchInput.value = search;
          roleInput.value = role;
          warning.style.display = hasRequest === 'yes' ? 'block' : 'none';
          modal.style.display = 'flex';
        }

        function closeModal() {
          modal.style.display = 'none';
          form.action = '';
          emailInput.value = '';
          firstNameInput.value = '';
          lastNameInput.value = '';
          searchInput.value = '';
          roleInput.value = '';
          warning.style.display = 'none';
        }

        editButtons.forEach(function (btn) {
          btn.addEventListener('click', function () {
            var id = btn.getAttribute('data-edit-user-id');
            var email = btn.getAttribute('data-edit-user-email');
            var firstName = btn.getAttribute('data-edit-user-firstname');
            var lastName = btn.getAttribute('data-edit-user-lastname');
            var search = btn.getAttribute('data-edit-user-search');
            var role = btn.getAttribute('data-edit-user-role');
            var hasRequest = btn.getAttribute('data-edit-user-hasrequest');
            openModal(id, email, firstName, lastName, search, role, hasRequest);
          });
        });

        closeButtons.forEach(function (btn) {
          btn.addEventListener('click', closeModal);
        });

        modal.addEventListener('click', function (e) {
          if (e.target === modal) {
            closeModal();
          }
        });
      })();
    </script>
  </body>
</html>
