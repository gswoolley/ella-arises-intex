      // Show survey from participant modal
      function showSurveyInModal(attendanceIndex) {
        if (!currentParticipantData || !currentParticipantData.attendance) {
          alert('Survey data not available');
          return;
        }
        
        const attendance = currentParticipantData.attendance[attendanceIndex];
        if (!attendance || !attendance.surveyoverallscore) {
          alert('Survey not found');
          return;
        }
        
        // Close participant modal and open survey modal
        closeModal('participantDetailsModal');
        openModal('surveyDetailsModal');
        
        const content = `
          <div style="margin-bottom: 20px;">
            <h3 style="margin-bottom: 12px; color: #2f2623; font-size: 16px;">Event Information</h3>
            <div style="background: #fff7f3; padding: 12px; border-radius: 14px; margin-bottom: 12px;">
              <div style="margin-bottom: 8px;"><strong>Event:</strong> ${attendance.eventname}</div>
              <div style="margin-bottom: 8px;"><strong>Date:</strong> ${attendance.eventdatetimestart ? new Date(attendance.eventdatetimestart).toLocaleDateString() : 'N/A'}</div>
            </div>
          </div>
          
          <div style="margin-bottom: 20px;">
            <h3 style="margin-bottom: 12px; color: #2f2623; font-size: 16px;">Survey Scores</h3>
            <div style="background: #fff7f3; padding: 12px; border-radius: 14px; margin-bottom: 12px;">
              <div style="margin-bottom: 8px;"><strong>Overall Score:</strong> ${attendance.surveyoverallscore || 'N/A'}</div>
              <div><strong>NPS Bucket:</strong> ${attendance.surveynpsbucket || 'N/A'}</div>
