      // Toggle Other field visibility
      function toggleEditOtherField(value) {
        const container = document.getElementById('editOtherFieldContainer');
        if (value === 'Other') {
          container.style.display = 'block';
        } else {
          container.style.display = 'none';
          document.getElementById('editFieldOfInterestOther').value = '';
        }
      }

      function toggleAddOtherField(value) {
        const container = document.getElementById('addOtherFieldContainer');
        if (value === 'Other') {
          container.style.display = 'block';
        } else {
          container.style.display = 'none';
          document.getElementById('addFieldOfInterestOther').value = '';
        }
      }

      // Handle form submission to use custom value if "Other" is selected
      document.getElementById('editParticipantForm').addEventListener('submit', function(e) {
        const select = document.getElementById('editFieldOfInterest');
        const otherInput = document.getElementById('editFieldOfInterestOther');
        
        if (select.value === 'Other' && otherInput.value.trim()) {
          // Create a hidden input with the custom value
          const hiddenInput = document.createElement('input');
          hiddenInput.type = 'hidden';
          hiddenInput.name = 'fieldOfInterest';
          hiddenInput.value = otherInput.value.trim();
          this.appendChild(hiddenInput);
          
          // Disable the select so it doesn't submit
          select.disabled = true;
        }
      });

      document.getElementById('addParticipantForm').addEventListener('submit', function(e) {
        const select = document.getElementById('addFieldOfInterest');
        const otherInput = document.getElementById('addFieldOfInterestOther');
        
        if (select.value === 'Other' && otherInput.value.trim()) {
          // Create a hidden input with the custom value
          const hiddenInput = document.createElement('input');
