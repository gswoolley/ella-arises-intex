    <script>
      // Tab switching
      function switchTab(tabName) {
        const tabs = document.querySelectorAll('.participants-tab-content');
        const buttons = document.querySelectorAll('.participants-tab-btn');
        
        tabs.forEach(tab => tab.style.display = 'none');
        buttons.forEach(btn => btn.classList.remove('active'));
        
        document.getElementById(tabName + '-tab').style.display = 'block';
        event.target.classList.add('active');
        
        // Update URL without page reload
        const url = new URL(window.location);
        url.searchParams.set('tab', tabName);
        window.history.pushState({}, '', url);
      }

      // Modal functions
      function openModal(modalId) {
        document.getElementById(modalId).classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      function closeModal(modalId) {
        document.getElementById(modalId).classList.remove('active');
        document.body.style.overflow = 'auto';
      }

      // Participant details
      async function viewParticipantDetails(participantId) {
        openModal('participantDetailsModal');
        
        try {
          const response = await fetch(`/admin/participants/${participantId}/details`);
          const data = await response.json();
          
          if (response.ok) {
            const content = `
              <div style="margin-bottom: 20px;">
                <h3 style="margin-bottom: 12px; color: #2f2623; font-size: 16px;">Personal Information</h3>
                <div style="background: #fff7f3; padding: 12px; border-radius: 14px; margin-bottom: 12px;">
                  <div style="margin-bottom: 8px;"><strong>Name:</strong> ${data.personfirstname} ${data.personlastname}</div>
                  <div style="margin-bottom: 8px;"><strong>Email:</strong> ${data.personemail}</div>
                  <div style="margin-bottom: 8px;"><strong>Phone:</strong> ${data.personphone || 'Not provided'}</div>
                  <div style="margin-bottom: 8px;"><strong>DOB:</strong> ${data.persondob ? new Date(data.persondob).toLocaleDateString() : 'Not provided'}</div>
                  <div style="margin-bottom: 8px;"><strong>City:</strong> ${data.personcity || 'Not provided'}</div>
                  <div style="margin-bottom: 8px;"><strong>State:</strong> ${data.personstate || 'Not provided'}</div>
                  <div style="margin-bottom: 8px;"><strong>ZIP:</strong> ${data.personzip || 'Not provided'}</div>
                  <div style="margin-bottom: 8px;"><strong>Role:</strong> ${data.personrole || 'Not provided'}</div>
                  <div style="margin-bottom: 8px;"><strong>School/Employer:</strong> ${data.personschooloremployer || 'Not provided'}</div>
                  <div><strong>Field of Interest:</strong> ${data.personfieldofinterest || 'Not provided'}</div>
                </div>
              </div>
              
              ${data.donations && data.donations.length > 0 ? `
                <div style="margin-bottom: 20px;">
                  <h3 style="margin-bottom: 12px; color: #2f2623; font-size: 16px;">Recent Donations</h3>
                  <div style="background: #fff7f3; padding: 12px; border-radius: 14px;">
                    ${data.donations.slice(0, 3).map(donation => `
                      <div style="margin-bottom: 8px;">
                        <strong>$${donation.donationamount}</strong> - ${new Date(donation.donationdate).toLocaleDateString()}
                        ${donation.donationtype ? ` (${donation.donationtype})` : ''}
                      </div>
                    `).join('')}
                    ${data.donations.length > 3 ? `<div style="color: #6b5a56; font-size: 12px;">... and ${data.donations.length - 3} more</div>` : ''}
                  </div>
                </div>
              ` : ''}
              
              ${data.milestones && data.milestones.length > 0 ? `
                <div style="margin-bottom: 20px;">
                  <h3 style="margin-bottom: 12px; color: #2f2623; font-size: 16px;">Milestones</h3>
                  <div style="background: #fff7f3; padding: 12px; border-radius: 14px;">
                    ${data.milestones.slice(0, 3).map(milestone => `
                      <div style="margin-bottom: 8px;">
                        <strong>${milestone.milestonetitle}</strong>
                        ${milestone.milestonedate ? ` - ${new Date(milestone.milestonedate).toLocaleDateString()}` : ''}
                      </div>
                    `).join('')}
                    ${data.milestones.length > 3 ? `<div style="color: #6b5a56; font-size: 12px;">... and ${data.milestones.length - 3} more</div>` : ''}
                  </div>
                </div>
              ` : ''}
              
              ${data.attendance && data.attendance.length > 0 ? `
                <div>
                  <h3 style="margin-bottom: 12px; color: #2f2623; font-size: 16px;">Recent Event Attendance</h3>
                  <div style="background: #fff7f3; padding: 12px; border-radius: 14px;">
                    ${data.attendance.slice(0, 3).map(attendance => `
                      <div style="margin-bottom: 8px;">
                        <strong>${attendance.eventname}</strong>
                        ${attendance.eventdatetimestart ? ` - ${new Date(attendance.eventdatetimestart).toLocaleDateString()}` : ''}
                        ${attendance.surveyoverallscore ? `<br><span style="color: #6b5a56; font-size: 12px;">Survey Score: ${attendance.surveyoverallscore}</span>` : ''}
                      </div>
                    `).join('')}
                    ${data.attendance.length > 3 ? `<div style="color: #6b5a56; font-size: 12px;">... and ${data.attendance.length - 3} more</div>` : ''}
                  </div>
                </div>
              ` : ''}
            `;
            
            document.getElementById('participantDetailsContent').innerHTML = content;
          } else {
            document.getElementById('participantDetailsContent').innerHTML = '<div class="participants-error">Failed to load participant details</div>';
          }
        } catch (error) {
          console.error('Error loading participant details:', error);
          document.getElementById('participantDetailsContent').innerHTML = '<div class="participants-error">Error loading participant details</div>';
        }
      }

      // Edit participant
      async function editParticipant(participantId) {
        try {
          const response = await fetch(`/admin/participants/${participantId}/details`);
          const data = await response.json();
          
          if (response.ok) {
            document.getElementById('editParticipantId').value = participantId;
            document.getElementById('editFirstName').value = data.personfirstname || '';
            document.getElementById('editLastName').value = data.personlastname || '';
            document.getElementById('editEmail').value = data.personemail || '';
            document.getElementById('editPhone').value = data.personphone || '';
            document.getElementById('editDob').value = data.persondob ? data.persondob.split('T')[0] : '';
            document.getElementById('editRole').value = data.personrole || '';
            document.getElementById('editCity').value = data.personcity || '';
            document.getElementById('editState').value = data.personstate || '';
            document.getElementById('editZip').value = data.personzip || '';
            document.getElementById('editSchoolOrEmployer').value = data.personschooloremployer || '';
            document.getElementById('editFieldOfInterest').value = data.personfieldofinterest || '';
            
            document.getElementById('editParticipantForm').action = `/admin/participants/${participantId}/update`;
            openModal('editParticipantModal');
          } else {
            alert('Failed to load participant data');
          }
        } catch (error) {
          console.error('Error loading participant data:', error);
          alert('Error loading participant data');
        }
      }

      // Add participant
      function openAddParticipantModal() {
        openModal('addParticipantModal');
      }

      // Delete participant
      function deleteParticipant(participantId) {
        if (confirm('Are you sure you want to delete this participant? This action cannot be undone and will remove all associated data including donations, milestones, and attendance records.')) {
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = `/admin/participants/${participantId}/delete`;
          
          const tabInput = document.createElement('input');
          tabInput.type = 'hidden';
          tabInput.name = 'tab';
          tabInput.value = '<%= tab %>';
          form.appendChild(tabInput);
          
          const pageInput = document.createElement('input');
          pageInput.type = 'hidden';
          pageInput.name = 'page';
          pageInput.value = '<%= page %>';
          form.appendChild(pageInput);
          
          const searchInput = document.createElement('input');
          searchInput.type = 'hidden';
          searchInput.name = 'q';
          searchInput.value = '<%= search %>';
          form.appendChild(searchInput);
          
          document.body.appendChild(form);
          form.submit();
        }
      }

      // Add milestone
      function openAddMilestoneModal() {
        openModal('addMilestoneModal');
      }

      // Edit milestone
      function editMilestone(milestoneId) {
        const milestonesData = <%- JSON.stringify(milestones || []) %>;
        const milestone = milestonesData.find(m => m.participantmilestoneid == milestoneId);
        
        if (milestone) {
          document.getElementById('editMilestoneId').value = milestoneId;
          document.getElementById('editMilestoneTitle').value = milestone.milestonetitle || '';
          document.getElementById('editMilestoneDate').value = milestone.milestonedate ? milestone.milestonedate.split('T')[0] : '';
          
          document.getElementById('editMilestoneForm').action = `/admin/milestones/${milestoneId}/update`;
          openModal('editMilestoneModal');
        }
      }

      // Delete milestone
      function deleteMilestone(milestoneId) {
        if (confirm('Are you sure you want to delete this milestone?')) {
          const form = document.createElement('form');
          form.method = 'POST';
          form.action = `/admin/milestones/${milestoneId}/delete`;
          
          const pageInput = document.createElement('input');
          pageInput.type = 'hidden';
          pageInput.name = 'page';
          pageInput.value = '<%= page %>';
          form.appendChild(pageInput);
          
          const searchInput = document.createElement('input');
          searchInput.type = 'hidden';
          searchInput.name = 'q';
          searchInput.value = '<%= search %>';
          form.appendChild(searchInput);
          
          document.body.appendChild(form);
          form.submit();
        }
      }

      // View survey details
      function viewSurveyDetails(surveyId) {
        alert('Survey details view will be implemented in a future update.');
      }

      // Close modals when clicking outside
      document.addEventListener('click', function(event) {
        if (event.target.classList.contains('participants-modal')) {
          event.target.classList.remove('active');
          document.body.style.overflow = 'auto';
        }
      });

      // Initialize page
      document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const currentTab = urlParams.get('tab') || 'participants';
        
        document.querySelectorAll('.participants-tab-btn').forEach(btn => {
          btn.classList.remove('active');
          if (btn.textContent.toLowerCase().includes(currentTab)) {
            btn.classList.add('active');
          }
        });
      });
    </script>
