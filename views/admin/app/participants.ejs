        if (event.target.classList.contains('participants-modal')) {
          event.target.classList.remove('active');
          document.body.style.overflow = 'auto';
        }
      });

      // Toggle donations list
      function showAllDonations() {
        document.getElementById('donationsListShort').style.display = 'none';
        document.getElementById('donationsListFull').style.display = 'block';
      }

      function showLessDonations() {
        document.getElementById('donationsListShort').style.display = 'block';
        document.getElementById('donationsListFull').style.display = 'none';
      }

      // Initialize page
      document.addEventListener('DOMContentLoaded', function() {
        const urlParams = new URLSearchParams(window.location.search);
        const currentTab = urlParams.get('tab') || 'participants';
        
        document.querySelectorAll('.participants-tab-btn').forEach(btn => {
          btn.classList.remove('active');
          if (btn.textContent.toLowerCase().includes(currentTab)) {
            btn.classList.add('active');
          }
        });
      });
    </script>
